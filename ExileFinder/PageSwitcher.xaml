<Window x:Class="ExileFinder.PageSwitcher"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ExileFinder"
        mc:Ignorable="d"
        Title="MainWindow" Height="331" Width="590"
        WindowStyle="None"
        WindowStartupLocation="CenterScreen"
        WindowState="Normal"
        Opacity="0.9"
        AllowsTransparency="True">
    <Window.Resources>
        <ImageBrush x:Key="BackgroundBush" ImageSource="Resources/Images/background.jpg"></ImageBrush>
        <Style TargetType="Grid">
            <Setter Property="Background" Value="{StaticResource BackgroundBush}"></Setter>
        </Style>
        <Style TargetType="Button">
            <Setter Property="Background" Value="#FF3E3E3E"></Setter>
            <Setter Property="Foreground" Value="White"></Setter>
            <Setter Property="Margin" Value="495,270,0,0"></Setter>
        </Style>
    </Window.Resources>
    <Grid></Grid>
</Window>
